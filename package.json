{
  "name": "notion-agent-monorepo",
  "version": "1.0.0",
  "description": "Notion Agent SaaS Platform - Multi-tenant production environment",
  "private": true,
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src && python -m uvicorn server_simple:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src && python -m pytest",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd src && python -m flake8",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:shared && npm run clean:frontend",
    "clean:shared": "cd shared && npm run clean",
    "clean:frontend": "cd frontend && npm run clean",
    "install:all": "npm install && cd frontend && npm install && cd ../shared && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/notion-agent.git"
  },
  "keywords": [
    "notion",
    "ai",
    "agent",
    "saas",
    "productivity",
    "automation"
  ],
  "author": "Notion Agent Team",
  "license": "MIT",
  "dependencies": {
    "lucide-react": "^0.537.0",
    "react-hot-toast": "^2.6.0"
  }
}
